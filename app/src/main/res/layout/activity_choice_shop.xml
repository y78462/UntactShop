<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#CDBDF3"
            android:fontFamily="@font/title"
            android:gravity="center"
            android:text="지하상가 선택"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="50dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/shop_search_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="5"
                android:background="@drawable/round_corner"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:hint="매장 검색"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/shop_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                android:onClick="search_btn"
                android:src="@drawable/search" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <Button
                android:id="@+id/명동권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="명동권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/을지로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/명동권"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="을지로권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/종로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/명동권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="종로권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/강남권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/종로권"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="강남권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/터미널권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/종로권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="터미널권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/영등포권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignTop="@id/터미널권"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/choice_station"
                android:fontFamily="@font/font"
                android:text="영등포권"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>