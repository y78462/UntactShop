<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.2"
            android:text="지하상가 선택"
            android:textColor="@color/black"
            android:textSize="50dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.05"
            android:weightSum="5">


            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="매장 검색"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:paddingLeft="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="5"
                android:background="@drawable/shop_search"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <Button
                android:id="@+id/명동권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="명동권" />

            <Button
                android:id="@+id/을지로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/명동권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="을지로권" />

            <Button
                android:id="@+id/종로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/명동권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="종로권" />
            <Button
                android:id="@+id/강남권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/종로권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="강남권" />
            <Button
                android:id="@+id/터미널권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/종로권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="터미널권" />
            <Button
                android:id="@+id/영등포권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/터미널권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="영등포권" />


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>