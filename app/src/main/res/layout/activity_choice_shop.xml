<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.1"
            android:text="지하상가 선택"
            android:fontFamily="@font/title"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:background="#CDBDF3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.1"
            android:layout_margin="50dp">

            <EditText
                android:id="@+id/shop_search_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="매장 검색"
                android:textColorHint="@color/black"
                android:textSize="20dp"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/font"
                android:textStyle="bold"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/round_corner" />

            <Button
                android:id="@+id/shop_search_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:onClick="search_btn"
                android:backgroundTint="#dee2e6"
                android:text="검색"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"></Button>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <Button
                android:id="@+id/명동권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/font"
                android:textStyle="bold"
                android:text="명동권" />

            <Button
                android:id="@+id/을지로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/명동권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:text="을지로권" />

            <Button
                android:id="@+id/종로권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/명동권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:text="종로권" />
            <Button
                android:id="@+id/강남권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/종로권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:text="강남권" />
            <Button
                android:id="@+id/터미널권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/종로권"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:text="터미널권" />
            <Button
                android:id="@+id/영등포권"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/터미널권"
                android:background="@drawable/choice_station"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font"
                android:text="영등포권" />


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>